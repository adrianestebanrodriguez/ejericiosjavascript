<!DOCTYPE html>
<meta charset="UTF-8">

<h1>√çNDICE DE MASA CORPORAL</h1>

<script>
	function saltarLinea() {

		document.write("<br>");
		document.write("<br>");
		document.write("<br>");

}

	function imprimir(frase) {

		document.write(frase);
		saltarLinea();
}

	function calcularImc(peso,altura) {
		return (peso/(altura * altura));
	
}

	nombre = prompt("Su nombre, por favor")
	pesoInformado = prompt(nombre + " , " + "escriba su peso")
	alturaInformada = prompt(nombre + " , " + "escriba su altura")

	imcCalculado = calcularImc(pesoInformado,alturaInformada);
	imprimir(nombre + ", su IMC calculado es: " + Math.round (imcCalculado));

</script>
